<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="574dip"
	android:layout_height="wrap_content">

	<TextView
		android:id="@+id/textStatus"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_marginBottom="7dip"
		android:layout_marginLeft="20dip"
		android:layout_marginTop="7dip"
		android:text="GPS включен"
		android:textStyle="bold" />

	<TableLayout
		android:id="@+id/TableGPS"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/textStatus"
		android:layout_marginBottom="20dip"
		android:layout_marginLeft="20dip"
		android:layout_marginRight="20dip"
		android:stretchColumns="1"
		android:weightSum="1">

		<TableRow
			android:layout_margin="1dip"
			android:weightSum="1">

			<TextView
				android:padding="3dip"
				android:text="Дата и время:"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtDateTimeAndProvider"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>

		<TableRow android:layout_margin="1dip">

			<TextView
				android:padding="3dip"
				android:text="@string/txt_latitude"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtLatitude"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>

		<TableRow android:layout_margin="1dip">

			<TextView
				android:padding="3dip"
				android:text="@string/txt_longitude"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtLongitude"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>

		<TableRow android:layout_margin="1dip">

			<TextView
				android:id="@+id/lblAltitude"
				android:padding="3dip"
				android:text="@string/txt_altitude"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtAltitude"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>

		<TableRow android:layout_margin="1dip">

			<TextView
				android:id="@+id/lblSpeed"
				android:padding="3dip"
				android:text="@string/txt_speed"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtSpeed"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>

		<TableRow android:layout_margin="1dip">

			<TextView
				android:id="@+id/lblDirection"
				android:padding="3dip"
				android:text="@string/txt_direction"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtDirection"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>

		<TableRow android:layout_margin="1dip">

			<TextView
				android:id="@+id/lblSatellites"
				android:padding="3dip"
				android:text="@string/txt_satellites"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtSatellites"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>

		<TableRow android:layout_margin="1dip">

			<TextView
				android:id="@+id/lblAccuracy"
				android:padding="3dip"
				android:text="@string/txt_accuracy"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txtAccuracy"
				android:gravity="left"
				android:padding="3dip" />
		</TableRow>
	</TableLayout>

</RelativeLayout>