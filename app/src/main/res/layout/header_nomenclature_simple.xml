<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/foodstaff_list_header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <Button
        android:id="@+id/head_btn_article"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.15"
        android:text="@string/article" />

    <Button
        android:id="@+id/head_btn_nomenclature"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.55"
        android:text="@string/nomenclature" />

    <Button
        android:id="@+id/head_btn_vendor"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.3"
        android:text="@string/vendor" />

</LinearLayout>