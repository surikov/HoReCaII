<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:weightSum="1" >

    <Button
        android:id="@+id/head_btn_number"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.04"
		android:textColor="#ff000099"
        android:text="№" />

    <Button
        android:id="@+id/head_btn_article"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="Арт." />

    <Button
        android:id="@+id/head_btn_nomenclature"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.19"
		android:textColor="#ff000099"
        android:text="Номенклатура" />

    <Button
        android:id="@+id/head_btn_count"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.08"
		android:textColor="#ff000099"
        android:text="Кол-во" />

    <Button
        android:id="@+id/head_btn_min_count"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="Мин.кол." />

    <Button
        android:id="@+id/head_btn_place_count"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.06"
        android:text="К мест" />

    <Button
        android:id="@+id/head_btn_unit"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.03"
        android:text="Ед.изм." />

    <Button
        android:id="@+id/head_btn_price"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
		android:textColor="#ff000099"
        android:text="Цена" />

    <Button
        android:id="@+id/head_btn_last_price"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.08"
		android:textColor="#ff000099"
        android:text="Посл.цена"
        android:textSize="7pt" />

    <Button
        android:id="@+id/head_btn_sale"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="Скидка" />

    <Button
        android:id="@+id/head_btn_sale_type"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.1"
        android:text="Вид скидки" />

    <Button
        android:id="@+id/head_btn_pricewithsale"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="Цена со скидкой"
		android:textColor="#ff000099"
        android:textSize="7pt" />

    <Button
        android:id="@+id/head_btn_amount"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="Сумма" />

</LinearLayout>