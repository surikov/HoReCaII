<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:weightSum="1" >

    <Button
        android:id="@+id/head_btn_number"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.04"
        android:text="@string/number_symbol" />

    <Button
        android:id="@+id/head_btn_article"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="@string/article" />

    <Button
        android:id="@+id/head_btn_nomenclature"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.19"
        android:text="@string/nomenclature" />

    <Button
        android:id="@+id/head_btn_count"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.08"
        android:text="@string/count_short" />

    <Button
        android:id="@+id/head_btn_min_count"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="@string/min_count" />

    <Button
        android:id="@+id/head_btn_place_count"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.06"
        android:text="@string/k_mest" />

    <Button
        android:id="@+id/head_btn_unit"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.03"
        android:text="@string/ed" />

    <Button
        android:id="@+id/head_btn_price"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="@string/price" />

    <Button
        android:id="@+id/head_btn_last_price"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.08"
        android:text="@string/last_price"
        android:textSize="7pt" />

    <Button
        android:id="@+id/head_btn_sale"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="Скидка" />

    <Button
        android:id="@+id/head_btn_sale_type"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.1"
        android:text="Вид скидки" />

    <Button
        android:id="@+id/head_btn_pricewithsale"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="@string/price_with_sale"
        android:textSize="7pt" />

    <Button
        android:id="@+id/head_btn_amount"
        android:layout_height="40dip" android:layout_width="0dip"
        android:layout_weight="0.07"
        android:text="@string/amount" />

</LinearLayout>