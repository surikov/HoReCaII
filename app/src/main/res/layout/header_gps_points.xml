<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:weightSum="1"
	android:layout_height="wrap_content">

	<Button android:id="@+id/head_btn_date" android:layout_height="40dip" android:layout_width="0dip"
		android:layout_weight=".1" android:text="Выгружен" />

	<Button android:id="@+id/head_btn_time" android:layout_height="40dip" android:layout_width="0dip"
		android:layout_weight=".4" android:text="Время" />

	<Button android:id="@+id/head_shirota" android:layout_height="40dip" android:layout_width="0dip"
		android:layout_weight=".25" android:text="Широта" />

	<Button android:id="@+id/head_dolgota" android:layout_height="40dip" android:layout_width="0dip"
		android:layout_weight=".25" android:text="Долгота" />
		
</LinearLayout>